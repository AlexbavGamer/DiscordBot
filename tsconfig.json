{
  "compileOnSave": true,
  "compilerOptions": 
  {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "pretty": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "baseUrl": "/",

    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es5",
      "es6",
      "es7"
    ],
    "paths": {
      "*": ["src/types"] 
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}